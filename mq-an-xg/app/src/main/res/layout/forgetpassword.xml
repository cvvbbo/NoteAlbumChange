<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb"
        android:background="#3090E6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:padding="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:layout_marginTop="@dimen/x5"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家和地区"
            android:textSize="16sp" />


       <View
           android:layout_width="0dp"
           android:layout_height="1dp"
           android:layout_weight="1"/>

        <TextView
            android:layout_marginTop="@dimen/x5"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/send_code"
            android:layout_width="94dp"
            android:layout_height="39dp"
            android:text="+86 中国"
            android:textSize="16sp" />


    </LinearLayout>


    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:background="@color/linecolor"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#000000"
            android:id="@+id/signbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号      "
            android:textSize="16sp" />


        <EditText
            android:layout_marginLeft="@dimen/x12"
            android:hint="请输入手机号"
            android:id="@+id/phonenum"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:background="@color/linecolor"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginTop="@dimen/x22"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/forgetpasswordphonenum"
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/x36"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="下一步"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:background="@drawable/select_2loadbutton"
        />

</LinearLayout>