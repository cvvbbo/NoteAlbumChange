<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circleimageView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout

        android:onClick="changer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.emiaoqian.express.view.ui.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/headIcon"
            android:layout_width="65dp"
            android:src="@drawable/needreplace"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            circleimageView:border_color="#ffffff"
            circleimageView:border_width="1dp" />

        <TextView
            android:id="@+id/change_image"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#1a000000" />
    <ListView
        android:id="@+id/user_infor_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>